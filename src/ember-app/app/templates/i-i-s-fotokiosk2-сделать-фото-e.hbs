<h3 class="ui header">{{t "forms.i-i-s-fotokiosk2-сделать-фото-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.колВоФото
      class=(if (v-get validationModel "колВоФото" "isInvalid") "error")
      label=(t "forms.i-i-s-fotokiosk2-сделать-фото-e.колВоФото-caption")
      data-test-i-i-s-fotokiosk2-сделать-фото-e-колВоФото=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "колВоФото" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-fotokiosk2-сделать-фото-e.инфоФото-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.инфоФото
      displayAttributeName="категория"
      autocomplete=true
      relationName="инфоФото"
      projection="ИнфоФотоL"
      title=(t "forms.i-i-s-fotokiosk2-сделать-фото-e.инфоФото-caption")
      readonly=readonly
      componentName="инфоФотоLookup"
      class=(if (v-get validationModel "инфоФото" "isInvalid") "error")
      data-test-i-i-s-fotokiosk2-сделать-фото-e-инфоФото=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "инфоФото" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.инфоФото.цена
      class=(if (v-get validationModel.инфоФото "цена" "isInvalid") "error")
      label=(t "forms.i-i-s-fotokiosk2-сделать-фото-e.инфоФото.цена-caption")
      data-test-i-i-s-fotokiosk2-сделать-фото-e-инфоФото-цена=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.инфоФото "цена" "message")}}
  </div>
</form>
