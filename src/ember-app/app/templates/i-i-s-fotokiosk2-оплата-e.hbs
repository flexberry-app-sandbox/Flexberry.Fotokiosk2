<h3 class="ui header">{{t "forms.i-i-s-fotokiosk2-оплата-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field" data-test-i-i-s-fotokiosk2-оплата-e-способОпл="true">
    <label>{{t "forms.i-i-s-fotokiosk2-оплата-e.способОпл-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-fotokiosk2-вид-оплаты")
      value=model.способОпл
      class=(if (v-get validationModel "способОпл" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "способОпл" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-fotokiosk2-оплата-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-fotokiosk2-оплата-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.время
      class=(if (v-get validationModel "время" "isInvalid") "error")
      label=(t "forms.i-i-s-fotokiosk2-оплата-e.время-caption")
      data-test-i-i-s-fotokiosk2-оплата-e-время=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "время" "message")}}
  </div>
  <div class="field" data-test-i-i-s-fotokiosk2-оплата-e-сделатьФото-инфоФото-категория="true">
    <label>{{t "forms.i-i-s-fotokiosk2-оплата-e.сделатьФото.инфоФото.категория-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-fotokiosk2-категория")
      value=model.сделатьФото.инфоФото.категория
      class=(if (v-get validationModel.сделатьФото.инфоФото "категория" "isInvalid") "error")
      readonly=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.сделатьФото.инфоФото "категория" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.сделатьФото.колВоФото
      class=(if (v-get validationModel.сделатьФото "колВоФото" "isInvalid") "error")
      label=(t "forms.i-i-s-fotokiosk2-оплата-e.сделатьФото.колВоФото-caption")
      data-test-i-i-s-fotokiosk2-оплата-e-сделатьФото-колВоФото=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.сделатьФото "колВоФото" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.сделатьФото.инфоФото.цена
      class=(if (v-get validationModel.сделатьФото.инфоФото "цена" "isInvalid") "error")
      label=(t "forms.i-i-s-fotokiosk2-оплата-e.сделатьФото.инфоФото.цена-caption")
      data-test-i-i-s-fotokiosk2-оплата-e-сделатьФото-инфоФото-цена=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.сделатьФото.инфоФото "цена" "message")}}
  </div>
</form>
