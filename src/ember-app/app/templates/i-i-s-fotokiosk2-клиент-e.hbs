<h3 class="ui header">{{t "forms.i-i-s-fotokiosk2-клиент-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field" data-test-i-i-s-fotokiosk2-клиент-e-оплата-способОпл="true">
    <label>{{t "forms.i-i-s-fotokiosk2-клиент-e.оплата.способОпл-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-fotokiosk2-вид-оплаты")
      value=model.оплата.способОпл
      class=(if (v-get validationModel.оплата "способОпл" "isInvalid") "error")
      readonly=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.оплата "способОпл" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.оплата.сделатьФото.инфоФото.цена
      class=(if (v-get validationModel.оплата.сделатьФото.инфоФото "цена" "isInvalid") "error")
      label=(t "forms.i-i-s-fotokiosk2-клиент-e.оплата.сделатьФото.инфоФото.цена-caption")
      data-test-i-i-s-fotokiosk2-клиент-e-оплата-сделатьФото-инфоФото-цена=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.оплата.сделатьФото.инфоФото "цена" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-fotokiosk2-клиент-e.оплата.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=true
      value=model.оплата.дата
      class=(if (v-get validationModel.оплата "дата" "isInvalid") "error")
      data-test-i-i-s-fotokiosk2-клиент-e-оплата-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.оплата "дата" "message")}}
  </div>
</form>
